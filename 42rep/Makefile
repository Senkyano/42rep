SRCS = ft_isalpha.c \
	ft_isdigit.c \
	ft_isalnum.c \
	ft_isascii.c \
	ft_isprint.c \
	ft_strlen.c \
	ft_memset.c \
	ft_bzero.c \
	ft_memcpy.c \
	ft_memmove.c \
	ft_strlcpy.c \
	ft_strlcat.c \
	ft_toupper.c \
	ft_tolower.c \
	ft_strchr.c \
	ft_strrchr.c \
	ft_strnstr.c \
	ft_strncmp.c \
	ft_atoi.c \
	ft_calloc.c \
	ft_strdup.c 

CC = cc
NAME = libft.a
OBJS = ${SRCS:.c=.o}
FLAGS = -Wall -Werror -Wextra
INCLUDE = includes

all : ${NAME}

${NAME} : ${OBJS}
	ar rc ${NAME} ${OBJS}

.o.c :
	${CC} ${FLAGS} -c $< -o ${<:.c=.o} -I ${INCLUDE}

clean :
	rm -f ${OBJS}

fclean :
	rm -f ${NAME}

re : fclean all
